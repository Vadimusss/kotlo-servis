{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "es6",
    "allowJs": true,
    "outDir": "./dist",
    "strict": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
  },
  "include": [
    "src/",
  ],
  "exclude": [
    "node_modules",
    "dist",
  ],
}